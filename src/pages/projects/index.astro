---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Card, CardContent, CardDescription, CardFooter, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { Button } from "@/components/ui/button";
import { Github, ExternalLink } from "lucide-react";
import { siteConfig } from "@/data/site";

const projects = (await getCollection("projects")).sort((a, b) => {
  if (a.data.featured !== b.data.featured) {
    return a.data.featured ? -1 : 1;
  }
  return a.data.order - b.data.order;
});
---

<BaseLayout
  title={`Projects | ${siteConfig.author}`}
  description="Software projects and open source contributions"
>
  <div class="container mx-auto max-w-5xl px-4 py-16">
    <header class="mb-12">
      <h1 class="text-3xl font-bold md:text-4xl">Projects</h1>
      <p class="mt-4 text-lg text-muted-foreground">
        A selection of projects I've worked on
      </p>
    </header>

    {projects.length === 0 ? (
      <p class="text-muted-foreground">No projects yet. Check back soon!</p>
    ) : (
      <div class="grid gap-6 md:grid-cols-2">
        {projects.map((project) => (
          <Card className={`flex flex-col ${project.data.featured ? "border-primary/50" : ""}`}>
            <CardHeader>
              <div class="flex items-start justify-between gap-4">
                <div>
                  <CardTitle>
                    <a
                      href={`/projects/${project.id}`}
                      class="hover:text-primary transition-colors"
                    >
                      {project.data.title}
                    </a>
                  </CardTitle>
                  {project.data.featured && (
                    <Badge className="mt-2" variant="default">
                      Featured
                    </Badge>
                  )}
                </div>
              </div>
              <CardDescription class="mt-2">
                {project.data.description}
              </CardDescription>
            </CardHeader>
            <CardContent class="flex-1">
              <div class="flex flex-wrap gap-2">
                {project.data.tags.map((tag) => (
                  <Badge variant="secondary">{tag}</Badge>
                ))}
              </div>
            </CardContent>
            <CardFooter class="gap-2">
              {project.data.github && (
                <Button variant="outline" size="sm" asChild>
                  <a
                    href={project.data.github}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <Github className="mr-2 h-4 w-4" />
                    Code
                  </a>
                </Button>
              )}
              {project.data.live && (
                <Button variant="outline" size="sm" asChild>
                  <a
                    href={project.data.live}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <ExternalLink className="mr-2 h-4 w-4" />
                    Demo
                  </a>
                </Button>
              )}
              <Button variant="ghost" size="sm" asChild class="ml-auto">
                <a href={`/projects/${project.id}`}>
                  Read more
                </a>
              </Button>
            </CardFooter>
          </Card>
        ))}
      </div>
    )}
  </div>
</BaseLayout>
